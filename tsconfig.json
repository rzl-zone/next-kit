{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.rzl.json",
  "compilerOptions": {
    "stripInternal": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/tests/*": [
        "./tests/*"
      ]
    },
    "outDir": "dist"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "eslint.config.mjs",
  ],
  "exclude": [
    "deprecated",
    "node_modules",
    "dist",
    "dev",
  ]
}
